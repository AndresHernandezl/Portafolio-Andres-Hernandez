.Card
    background  #C2AC37
    border 5px solid black
    box-shadow 0 0 10px rgba(black,.5)
    border-radius  .5em
    padding .5em
    width: 150px

    &-image
        width  100%
        height 100px
    &-name
        color white
        text-transform uppercase
        margin 0 0 .5em 0
        font-size 1em

    &-description
        background White
        padding  .5em
        font-size  12px
        margin-bottom .3em
    &-attack
        background black
        color white
        font-size .7em
